{
  "manifest_version": 2,
  "name": "Improved Managebac",
  "version": "2.5.3",
  "description": "Improved Managebac improves your experience with Managebac.",
  "icons": {"128": "images/mb.png"},
  "permissions": ["*://*.managebac.com/student/*", "storage","tabs"],
  "web_accessible_resources": [
    "script/darkMode.css"
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "script/background.js"
    ]
  },
  "content_scripts": [
      {
        "matches": ["*://*.managebac.com/student/*"],
        "run_at": "document_start",
        "js": ["script/darkMode.js"]
      },
      {
        "matches": ["https://*.managebac.com/student/*"
        ],
        "run_at": "document_idle",
        "js": ["script/highcharts.js", "script/grader.js"]
      }
    ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
